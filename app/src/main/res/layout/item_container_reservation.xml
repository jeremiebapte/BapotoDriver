        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="19/4/2000"
        android:textColor="@color/colorNoteColor5"
        android:textSize="@dimen/_10ssp"/>


</LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
