            android:textColor="@color/colorNoteColor5"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
